<%- include("../partials/header.ejs") %>

<div class="container my-5">
  <% if(locals.error) { %>
  <div class="alert alert-danger" role="alert"><%= error %></div>

  <% } %>
  <h2 class="mb-4 fw-bold text-primary text-center">My Listings</h2>

  <div class="row g-4">
    <% if (locals.listings && listings.length > 0) { %> <% for (let listing of
    listings) { %>
    <div class="col-sm-12 col-md-6 col-lg-4">
      <a
        href="/listings/<%= listing._id %>"
        class="text-decoration-none text-dark"
      >
        <div
          class="card h-100 shadow-lg border-0 rounded-4 overflow-hidden listing-card transition"
        >
          <div class="position-relative">
            <img
              src="<%= listing.imageUrl %>"
              class="card-img-top"
              alt="Listing Image"
              style="height: 220px; object-fit: cover"
            />
          </div>

          <div class="card-body d-flex flex-column justify-content-between">
            <div>
              <h5 class="card-title fw-bold mb-2"><%= listing.title %></h5>
              <p class="card-text text-muted mb-2 small">
                <%= listing.description.length > 100 ?
                listing.description.substring(0, 100) + '...' :
                listing.description %>
              </p>
              <p class="fw-semibold text-success mb-1">
                $<%= listing.price %> / night
              </p>
              <p class="text-secondary small mb-0">
                📍 <%= listing.location %>, <%= listing.country %>
              </p>
            </div>

            <div class="d-flex align-items-center mt-4 pt-3 border-top">
              <img
                src="http://localhost:8080/<%= listing.owner.profilePic %>"
                alt="Owner"
                width="36"
                height="36"
                class="rounded-circle me-2 border"
                style="object-fit: cover"
              />
              <small class="text-muted"><%= listing.owner.name %></small>
            </div>
          </div>
        </div>
      </a>
    </div>
    <% } %> <% } else { %>
    <div class="col-12">
      <div class="alert alert-info text-center" role="alert">
        You have not created any listings yet.
      </div>
    </div>
    <% } %>
  </div>
</div>

<%- include("../partials/footer.ejs") %>
