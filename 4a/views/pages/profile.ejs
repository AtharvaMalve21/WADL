<%- include("../partials/header") %>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <!-- Profile Card -->
      <div class="card shadow-sm border-0">
        <div class="card-body p-4 d-flex flex-column align-items-center">
          <!-- Profile Image -->
          <img
            src="http://localhost:8080/<%= user.profilePic %>"
            alt="Profile Picture"
            class="rounded-circle mb-3 border"
            style="width: 120px; height: 120px; object-fit: cover"
          />
          <!-- User Info -->
          <h4 class="fw-bold mb-1"><%= user.name %></h4>
          <p class="text-muted mb-3"><%= user.email %></p>

          <!-- Optional Details -->
          <div class="d-flex justify-content-center gap-4 mt-3">
            <div class="text-center">
              <h6 class="fw-semibold mb-0"><%= listings.length %></h6>
              <small class="text-muted">Listings</small>
            </div>
            <div class="text-center">
              <h6 class="fw-semibold mb-0">4.8</h6>
              <small class="text-muted">Rating</small>
            </div>
          </div>

          <!-- Edit Button -->
          <a href="/edit-profile" class="btn btn-outline-primary mt-4 rounded-pill px-4">
            Edit Profile
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("../partials/footer") %>
